{
    "manifest_version": 2,
    "name": "GitHub Plus",
    "version": "0.1",
    "description": "Chrome extension to make a little better use of GitHub",
    "icons": {
        "128": "image/icon.png"
    },
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "https://github.com/*",
                "https://gist.github.com/*"
            ],
            "js": [
                "js/liquid-design.js"
            ]
        },
        {
            "run_at": "document_end",
            "matches": [
                "https://github.com/*",
                "https://gist.github.com/*"
            ],
            "js": [
                "js/jquery-2.2.4.min.js",
                "js/content.js",
                "js/ignore-whitespace.js",
                "js/remove-ellipsis.js",
                "js/expand-message.js",
                "js/show-hide-comment.js",
                "js/not-merge-wip.js",
                "js/no-relative-time.js",
                "js/open-diff-patch.js",
                "js/toolbar/insert-quote.js"
            ],
            "css": [
                "css/content.css",
                "css/tab-size.css",
                "css/close-button-to-left.css"
            ]
        }
    ],
    "web_accessible_resources": [
        "css/liquid-design.css"
    ],
    "background": {
        "scripts": [
            "js/liquid-design-bg.js",
            "js/ignore-whitespace-bg.js"
        ]
    },
    "homepage_url": "https://github.com/rockwillj/",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "webNavigation",
        "*://github.com/*",
        "*://gist.github.com/*"
    ]
}